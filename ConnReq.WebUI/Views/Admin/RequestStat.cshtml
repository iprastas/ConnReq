
@{
    ViewBag.Title = "Заявки - статистика";
    Layout = "_Layout";
}
<var id="siteRoot" hidden="hidden">@Url.Content("~")</var>
<section>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/js/requestStat.js" type="text/javascript" asp-append-version="true"></script>
</section>

<h3>@ViewBag.Title</h3>
<var id="siteRoot" hidden="hidden">@Url.Content("~")</var>

<div class="row form-group">
    <div class="col-md-2">
        <div id="since" class="control" title="начало периода">
            <input type="date" class="form-control" id="sincedp" value="@DateTime.Now.Year.ToString()-01-01" />
        </div>
    </div>
    <div class="col-md-2">
        <div id="upto" class="control" title="окончание периода">
            <input type="date" class="form-control" id="uptodp" value="@DateTime.Now.Year.ToString()-12-31" />
        </div>
    </div>
    <div class="col-md-2">
        <div id="resourceKind" class="control" title="Виды ресурсов"></div>
    </div>
    <div class="col-md-2">
        <div id="territory" class="control" title="Территории"></div>
    </div>
    <div class="col-md-2">
        <input type="checkbox" class="form-check-input" id="showEmpty" />
        <label class="form-check-label" for="showEmpty">Скрыть пустые строки</label>
    </div>
</div>
