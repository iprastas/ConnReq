@model ConnReq.Domain.Entities.NewRequest
@{
    ViewBag.Title = "Выбор поставщика ресурсов";
}

<h3 id="title">@ViewBag.Title</h3>

<var id="siteRoot" hidden="hidden">@Url.Content("~")</var>

@section scripts {
    <script src="~/js/newRequest.js" type="text/javascript"></script>
    <script src="~/js/controls/jquery.docsTable.js" type="text/javascript"/>
    <script src="~/js/fixTable.js"></script>
}
<div class="row">
    <div class="col-md-2">
        <div id="resourceKind" class="control" title="Виды ресурсов"></div>
    </div>
    <div class="col-md-2">
        <div id="territory" class="control" title="Территории"></div>
    </div>
    <div class="col-md-6">
        <div id="providers" class="control" title="Поставщики ресурсов"></div>
    </div>
    <div class="col-md-2">
        <input type="button" class="btn btn-default" value="Создать заявку" id="CreateRequest" disabled="disabled">
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("SaveDocument", "NewRequest", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div id="docsTable" class="control" style="overflow:auto;height:500px;" title="Прилагаемые документы(размером не более 10МБ)"></div>
            <input type="submit" name="UploadMultiply" id="SubmitMultiply" value="Отправить документы" hidden="hidden" />
        }
    </div>
</div>

<div id="loading"></div>