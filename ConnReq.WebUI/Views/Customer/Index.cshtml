@model ConnReq.WebUI.Models.RequestList
@{
    ViewBag.Title = "Заявки на подключение к ресурсам";
    Layout = "_Layout";
}
@section scripts {
    <script src="~/js/fixTable.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/myScripts/deleteDlg.js"></script>
}
<var id="siteRoot" hidden="hidden">@Url.Content("~")</var>
<h3>@ViewBag.Title</h3>
@if (Model.RequestItems.Count<ConnReq.Domain.Entities.RequestData>() > 0)
{
    <div class="tableContainer" style="overflow:auto;height:500px;">
        <table class="table-bordered" id="fixTable">
            <thead>
                <tr>
                    <th>№</th>
                    <th title="Дата подачи заявки">От</th>
                    <th title="Число прикрепленных документов">Документов</th>
                    <th title="Наименование поставщика">Поставщик</th>
                    <th title="Адрес поставщика">Адрес</th>
                    <th title="Вид ресурса">Ресурс</th>
                    <th title="Дата последнего изменения заказчиком">Изменено</th>
                    <th title="Входящий поставщика">Входящий поставщика</th>
                    <th title="Дата регистрации заявки">От</th>
                    <th title="Дата подписания договора">Заключение договора</th>
                    <th title="Замечания поставщика, для устранения">Замечания</th>
                    <th>Изменить</th>
                    <th>Удалить</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.RequestItems)
                {
                    <tr>
                        <td>@p.Request</td>
                        <td>@p.OutgoingDate</td>
                        <td>@p.DocCount</td>
                        <td>@p.Organisation</td>
                        <td>@p.Address</td>
                        <td>@p.ResourceName</td>
                        <td>@p.LastUpdate</td>
                        <td>@p.IncomingNum</td>
                        <td>@p.IncomingDate</td>
                        <td>@p.ContractDate</td>
                        <td>@p.Remarks</td>
                        @if (p.ContractDate == null)
                        {
                            <td>
                                <a href='@Url.Action("Index", "RequestDoc", new { request = p.Request })' title="Изменить заявку" class="btn btn-default">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                <a href='#' id=@p.Request title="Удалить заявку" class="btn btn-default del-button">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <input type="button" title="Создать заявку" value="Новая заявка" onclick="location.href='@Url.Action("Index", "NewRequest")'" />
    </div>
    <div class="col-md-4 col-md-offset-4">
        <input type="button" title="Загрузить шаблоны заявок" value="Загрузить шаблоны заявок" onclick="location.href='@Url.Action("Download", "Customer")'" />
    </div>
</div>
<div id="deleteDlg" title="Подверждаете удаление?">
    <p>
        <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>
        Вы действительно хотите безвозвратно удалить заявку?
    </p>
</div>
