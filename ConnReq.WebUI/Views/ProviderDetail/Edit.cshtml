@model ConnReq.Domain.Entities.Provider
@{
    ViewBag.Title = "Поставщик ресурса";
}

<div class="container">
    <h3>@ViewBag.Title</h3>
    @using (Html.BeginForm("Edit", "ProviderDetail", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.TextBoxFor(m => m.FactoryId, new { @hidden = "hidden" })
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.Name, new { @class = "col control-label" })
                <div class="col">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.TerritoryWork, new { @class = "control-label" })
                <dvi class="col">
                    @Html.DropDownListFor(m => m.Territory, Model.TerritoryWork, null, new { @class = "form-select" })
                </dvi>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.Address, new { @class = "col control-label" })
                <div class="col">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.INN, new { @class = "col control-label" })
                <div class="col">
                    @Html.TextBoxFor(m => m.INN, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.INN, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.EMail, new { @class = "col control-label" })
                <div class="col">
                    @Html.TextBoxFor(m => m.EMail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.EMail, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.WebSite, new { @class = "col control-label" })
                <div class="col">
                    @Html.TextBoxFor(m => m.WebSite, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.WebSite, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.Chief, new { @class = "col control-label" })
                <div class="col">
                    @Html.TextBoxFor(m => m.Chief, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Chief, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Warm, new { @class = "col control-label" })
            <div class="col-md-5">
                @Html.CheckBoxFor(m => m.Warm, new { @class = "col-md-2 control-label" })
                @Html.ValidationMessageFor(m => m.Warm, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Water, new { @class = "col control-label" })
            <div class="col-md-5">
                @Html.CheckBoxFor(m => m.Water, new { @class = "col-md-2 control-label" })
                @Html.ValidationMessageFor(m => m.Water, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.Since, new { @class = "col control-label" })
                <div class="col">
                    <input type="date" value="@Model?.Since.ToString("yyyy-MM-dd")" name="Since" class="form-control" />
                    @Html.ValidationMessageFor(m => m.Since, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(m => m.Upto, new { @class = "col control-label" })
                <div class="col">
                    <input type="date" value="Model?.Upto.ToString("yyyy-MM-dd")" name="Upto" class="form-control"/>
                    @Html.ValidationMessageFor(m => m.Upto, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </div>
    }
</div>



